{
    "name": "Zephyr Cortex Debug",
    "image": "zephyrprojectrtos/ci",
    "containerUser": "user",
    "remoteUser": "user",
    "customizations": {
        "vscode": {
            "extensions": [
                "eamodio.gitlens",
                "GitHub.copilot-chat",
                "github.copilot-labs",
                "GitHub.copilot",
                "marus25.cortex-debug",
                "ms-python.autopep8",
                "ms-python.python"
            ],
            "settings": {
                "[python]": {
                    "editor.defaultFormatter": "ms-python.autopep8",
                    "editor.formatOnSave": true
                },
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "bash",
                        "icon": "terminal-bash"
                    },
                    "fish": {
                        "path": "fish"
                    }
                }
            }
        }
    },
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y fish gdbserver"
}