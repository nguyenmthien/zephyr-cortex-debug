{
    "name": "Zephyr Cortex Debug",
    "image": "zephyrprojectrtos/ci",
    "customizations": {
        "vscode": {
            "extensions": [
                "eamodio.gitlens",
                "GitHub.copilot-chat",
                "github.copilot-labs",
                "GitHub.copilot",
                "marus25.cortex-debug",
                "ms-python.autopep8",
                "ms-python.python"
            ],
            "settings": {
                "[python]": {
                    "editor.defaultFormatter": "ms-python.autopep8",
                    "editor.formatOnSave": true
                }
            }
        }
    },
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y fish"
}